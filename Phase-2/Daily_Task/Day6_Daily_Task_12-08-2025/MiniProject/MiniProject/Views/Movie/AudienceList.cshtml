@model IEnumerable<MovieBookingApp.Models.Audience>

<style>
    body {
        background: radial-gradient(circle at top, #0d0d0d, #1a1a2e, #000);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f5f5f5;
        padding: 30px;
        margin: 0;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        margin-bottom: 25px;
        animation: fadeInDown 1s ease;
        text-shadow: 0 0 10px #ff5e62, 0 0 20px #ff9966;
    }

    p {
        text-align: center;
        font-size: 1.1rem;
        margin-bottom: 10px;
        color: #ccc;
        animation: fadeInUp 1s ease;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 8px 20px rgba(0,0,0,0.4);
        animation: fadeInUp 1.2s ease;
    }

    thead {
        background: linear-gradient(135deg, #ff5e62, #ff9966);
        color: white;
    }

    th, td {
        padding: 12px;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    tbody tr:hover {
        background: rgba(255, 255, 255, 0.08);
        transition: background 0.3s ease;
    }

    .btn-primary {
        display: block;
        width: fit-content;
        margin: 25px auto 0;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        background: linear-gradient(135deg, #ff5e62, #ff9966);
        border: none;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(255, 94, 98, 0.4);
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ff9966, #ff5e62);
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 0 20px rgba(255, 153, 102, 0.8);
        }

    .btn-delete {
        padding: 6px 12px;
        background: linear-gradient(135deg, #ff4d4d, #b30000);
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, #b30000, #ff4d4d);
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(255, 77, 77, 0.8);
        }
</style>

<h2>Audience List</h2>

<p><strong>Total Audience:</strong> @ViewBag.TotalAudience</p>
<p><strong>Average Age:</strong> @ViewBag.AverageAge</p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>DOB</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Gender</td>
                <td>@person.Age</td>
                <td>@person.DOB.ToString("yyyy-MM-dd")</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@person.Id" />
                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this record?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Movie/BookTicket" class="btn-primary">🎟 Book Another</a>
