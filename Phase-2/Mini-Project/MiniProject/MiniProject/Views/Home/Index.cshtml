@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: radial-gradient(circle at top, #1e1e1e, #000);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f5f5f5;
        text-align: center;
        padding-top: 50px;
    }

    h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 20px;
        animation: fadeInDown 1s ease-in-out;
        text-shadow: 0 0 10px #ff5e62, 0 0 20px #ff9966;
    }

    p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto 30px;
        animation: fadeInUp 1.2s ease-in-out;
        line-height: 1.5;
        color: #d0d0d0;
    }

    a {
        display: inline-block;
        padding: 12px 25px;
        margin: 10px;
        font-size: 1.1rem;
        font-weight: bold;
        text-decoration: none;
        color: #fff;
        border-radius: 8px;
        background: linear-gradient(135deg, #ff5e62, #ff9966);
        transition: all 0.3s ease;
        box-shadow: 0px 0px 15px rgba(255, 94, 98, 0.5);
    }

        a:hover {
            background: linear-gradient(135deg, #ff9966, #ff5e62);
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0px 0px 20px rgba(255, 153, 102, 0.8);
        }

</style>

<h1>Coolie 🎬 @ViewBag.MovieName</h1>
<p>@ViewBag.Description</p>

<a href="/Movie/BookTicket">🎟 Book Tickets</a>
<a href="/Movie/AudienceList">📜 View Audience List</a>
